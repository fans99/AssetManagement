@model AssetManagement.ViewModels.HomeLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <style>
        body {
            background-image: url("/Content/img/login_background.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            box-shadow: 100vw 100vh #00000070 inset;
        }

        .min-w-320 {
            min-width: 320px;
        }
        
        .min-h-250 {
            min-height: 250px;
        }

    </style>
    <link rel="stylesheet" href="~/lib/layui/css/layui.min.css" />
    <link rel="stylesheet" href="~/lib/tailwindcss/tailwind.min.css" />
    <script src="~/lib/layui/layui.min.js"></script>
</head>
<body>
    <div class="w-screen h-screen flex items-center justify-start flex-col pt-32">
        <div class="flex items-center mb-10">
            <img src="~/Content/img/logo.png" class="border-0 w-20 h-20 mr-5 -ml-8" />
            <h1 class="text-4xl text-white">资产管理系统</h1>
        </div>
        <form class="layui-form w-1/5 h-1/3 min-w-320 min-h-250 bg-gray-900 p-10 opacity-70" method="post">
            <div class="layui-form-item">
                <div class="layui-input-block ml-0">
                    <input type="text" name="UserName" required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block ml-0">
                    <input type="password" name="PassWord" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                </div>
            </div>
            <input type="checkbox" name="RememberPwd" value="true" lay-ignore /><span class="text-white">&nbsp;记住密码</span>
            <br />
            <button type="submit" class="layui-btn w-full mt-5">登&nbsp;录</button>
        </form>
    </div>
</body>
</html>
